extends ../layout

block content
  <!-- Portfolio Grid Section -->
  <section id="portfolio">
    <div class="container">
      include ../includes/alert.pug

      <div class="row">
        <div class="col-lg-12 text-center">
          <h2>My Stores</h2>
          <a href="/stores/refresh">
            <hr class="refresh-primary">
          </a>
        </div>
      </div>

      <div class="row">
        if stores.length == 0
          <div class="col-xs-12 align-center">
            | No stores yet
          </div>
        else
          each store in stores
            <div class="col-sm-4 portfolio-item">
              <a href="/stores/#{store.id}" class="portfolio-link">
                <div class="caption">
                  <div class="caption-content">
                    <i class="fa fa-search fa-3x"></i>
                  </div>
                </div>
                <img src=#{store.profile_pic} class="img-responsive" alt="">
                <h4>#{store.name}</h4>
              </a>
            </div>
      </div>
    </div>
  </section>
