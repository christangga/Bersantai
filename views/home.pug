extends layout

block content
  <!-- Header -->
  <header>
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <img class="img-responsive" src="img/profile.png" alt="">
          <div class="intro-text">
            <span class="name">Bersantai</span>
            <hr class="star-light">
            <span class="skills">Simple chatbot for shop owner</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Portfolio Grid Section -->
  <section id="portfolio">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2>Featured Stores</h2>
          <hr class="star-primary">
        </div>
      </div>
      <div class="row">
        if stores.length == 0
          <div class="col-xs-12 align-center">
            | No stores yet
          </div>
        else
          each store in stores
            <div class="col-sm-4 portfolio-item">
              <a href=#{store.link} class="portfolio-link">
                <div class="caption">
                  <div class="caption-content">
                    <i class="fa fa-search fa-3x"></i>
                  </div>
                </div>
                <img src=#{store.profile_pic} class="img-responsive" alt="">
                <h4>#{store.name}</h4>
              </a>
            </div>
      </div>
    </div>
  </section>

block footer
  <div class="footer-above">
    <div class="container">
      <div class="row">
        <div class="footer-col col-md-12">
          <h3>About Bersantai</h3>
          <p>Bersantai is a free to use Facebook chatbot created by <a href="http://github.com/christangga">@christangga</a>.</p>
          <ul class="list-inline">
            <li>
              <a href="#" target="_blank" class="btn-social btn-outline"><i class="fa fa-fw fa-facebook"></i></a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
