extends ../layout

block content
  <!-- Portfolio Grid Section -->
  <section id="portfolio">
    <div class="container">
      include ../includes/alert.pug

      <div class="row">
        <div class="col-lg-12 text-center">
          <h2>Settings</h2>
          <hr class="star-primary">
        </div>
      </div>

      <div class="row">
        if stores.length == 0
          <div class="col-xs-12 align-center">
            | No stores yet
          </div>
        else
          each store in stores
            <div class="col-lg-8 col-lg-offset-2">
              <form class="form-horizontal" role="form" method="POST" action="/settings">
                <input type="hidden" name="store_id" value=#{store.id}>
                <div class="form-group">
                  <div class="col-md-4 align-right" style="padding-top: 11px;">
                    <label for="matching_method">#{store.name}:</label>
                  </div>
                  <div class="col-md-6 align-right">
                    <select class="form-control" name="matching_method" onchange="this.form.submit()">
                      <option value="pattern" #{store.matching_method == 'pattern' ? 'selected' : ''}>Pattern</option>
                      <option value="tfidf" #{store.matching_method == 'tfidf' ? 'selected' : ''}>TF IDF</option>
                    </select>
                  </div>
                </div>
              </form>
            </div>
      </div>
    </div>
  </section>
